.chat-maim
  .chat-list
    .chat-list__box
      %p.chat-list__box__info-user
        = message.user.name
      %p.chat-list__box__info-date
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .chat-list__message
      - if message.content.present?
        %p.Message__content
          = message.content
      = image_tag message.image.url, class: 'Message__image' if message.image.present?
